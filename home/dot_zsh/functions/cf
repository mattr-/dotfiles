cf() {
  if [ "$#" -eq 1 ] ; then
    results=$(find ~/Code -mindepth 2 -maxdepth 2 -type d -name $1)
  else
    results=$(find ~/Code -mindepth 2 -maxdepth 2 -type d)
  fi
  count=$(echo "$results" | grep -c .)
  if [ "$count" -eq 1 ] ; then
    cd "$results"
  elif [ "$count" -gt 1 ] ; then
    cd $(echo "$results" | fzf --layout=reverse --height=10 --no-separator --info=hidden --delimiter / --nth -1 --exact --query "$1")
  fi
}
