#ls aliases
alias ls="ls -G"
[[ $OSTYPE == "linux-gnu" ]] && alias ls="ls --color=auto"
alias l="ls -l"
alias lh="ls -lh"
alias la="ls -lha"
alias lla="ls -la"
alias lsa="ls -ah"
alias lsd="ls -d"
alias ld="ls -ldh"
alias lart="ls -larth"
alias llart="ls -lart"
alias lr='ls -lRh'
alias llr='ls -lR'

#process aliases
alias psg="ps ax | grep"
alias k="kill"
alias k9="kill -9"
alias sk="sudo kill"
alias sk9="sudo kill -9"

#apply me some patches
alias pp0i="patch -p0 -i "
alias pp1i="patch -p1 -i "

alias cz="chezmoi"

# Optional aliases if commands are present
if which bat &>/dev/null; then
  alias cat='bat -n'
fi

if which eza &>/dev/null; then
  alias ls='eza'
fi

# neovim distribution aliases
alias nvlazy='NVIM_APPNAME=lazyvim nvim'
alias nvchad='NVIM_APPNAME=nvchad nvim'
alias nvdash='NVIM_APPNAME=dashvim nvim'

# vim:ft=sh
